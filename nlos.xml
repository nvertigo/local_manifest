<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote  name="bitbucket"
           fetch="https://bitbucket.org/" />

<!-- get NLOS -->

  <project name="nvertigo/android_vendor_nlos" path="vendor/nlos" remote="github" revision="nlos-15.1" />

  <remove-project name="LineageOS/android_build" />
  <project path="build/make" name="nvertigo/android_build" revision="nlos-15.1" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>

  <remove-project name="LineageOS/android_device_qcom_sepolicy" />
  <project path="device/qcom/sepolicy" name="nvertigo/android_device_qcom_sepolicy" revision="nlos-15.1" />

  <remove-project name="LineageOS/android_external_gptfdisk" />
  <project path="external/gptfdisk" name="nvertigo/android_external_gptfdisk" revision="nlos-15.1" />

  <remove-project name="LineageOS/android_external_libtar" />
  <project path="external/libtar" name="nvertigo/android_external_libtar" revision="nlos-15.1" />

  <remove-project name="LineageOS/android_frameworks_av" />
  <project path="frameworks/av" name="nvertigo/android_frameworks_av" revision="nlos-15.1" />

  <remove-project name="LineageOS/android_frameworks_base" />
  <project path="frameworks/base" name="nvertigo/android_frameworks_base" revision="nlos-15.1" />

  <remove-project name="LineageOS/android_frameworks_native" />
  <project path="frameworks/native" name="nvertigo/android_frameworks_native" revision="nlos-15.1" />

  <remove-project name="LineageOS/android_packages_apps_Settings" />
  <project path="packages/apps/Settings" name="nvertigo/android_packages_apps_Settings" revision="nlos-15.1" />

  <remove-project name="LineageOS/android_system_nfc" />
  <project path="system/nfc" name="nvertigo/android_system_nfc" revision="nlos-15.1" />

  <remove-project name="LineageOS/android_system_sepolicy" />
  <project path="system/sepolicy" name="nvertigo/android_system_sepolicy" revision="nlos-15.1" />

  <remove-project name="LineageOS/android_vendor_lineage" />
  <project path="vendor/lineage" name="nvertigo/android_vendor_lineage" revision="nlos-15.1" />

  <remove-project name="LineageOS/android_packages_apps_Gallery2" />
  <project path="packages/apps/Gallery2" name="nvertigo/android_packages_apps_Gallery2" revision="nlos-15.1" />

  <remove-project name="LineageOS/android_packages_apps_LockClock" />
  <project path="packages/apps/LockClock" name="nvertigo/android_packages_apps_LockClock" revision="nlos-15.1" />

  <remove-project name="LineageOS/android_packages_apps_WallpaperPicker" />
  <project path="packages/apps/WallpaperPicker" name="nvertigo/android_packages_apps_NLOSWallpaperPicker" revision="nlos-15.1" />

<!-- add busybox -->

  <project path="external/busybox" name="nvertigo/android_external_busybox" remote="github" revision="nlos-15.1" />

<!-- add newer plain gnu toolchains -->

  <project path="prebuilts/gcc/linux-x86/aarch64/aarch64-linux-android-7.3" name="nvertigo/aarch64-linux-android-7.3" remote="bitbucket" revision="master" />

<!-- get qcom native Snapdragon llvm toolchain -->

  <project path="prebuilts/snapdragon-llvm/toolchains/llvm-Snapdragon_LLVM_for_Android_6.0/prebuilt/linux-x86_64" name="nvertigo/llvm-Snapdragon_LLVM_for_Android" remote="github" revision="6.0.9" />

<!-- use Omni's webview prebuilts for now -->

  <remove-project name="LineageOS/android_external_chromium-webview" />
  <project path="external/chromium-webview" name="omnirom/android_external_chromium-webview" revision="android-8.1" />

</manifest>
